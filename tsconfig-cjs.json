{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "Node",
    "lib": [
      "ES6",
      "ES2015",
      "ESNext"
    ],
    "outDir": "lib/cjs",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "removeComments": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "test",
    "templates"
  ]
}